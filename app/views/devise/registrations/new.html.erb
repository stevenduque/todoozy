

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

<h2 class="text-center">Sign up</h2>

    <%= f.input :email, required: true, autofocus: true, label:false, placeholder: "Your email address", input_html: {class: "form-control"} %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), label:false, placeholder:"Choose your password", input_html: {class: "form-control"} %>
    <%= f.input :password_confirmation, required: true, label:false, placeholder:"Confirm your password", input_html: {class: "form-control"} %>

    <%= f.button :submit, "Create Your Free Account", class: "btn btn-warning btn-block" %>

<% end %>

<%= render "devise/shared/links" %>
